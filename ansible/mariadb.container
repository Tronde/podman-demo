[Unit]
Description=MariaDB Container for Demo

[Container]
Image=registry.redhat.io/rhel9/mariadb-105:1-177.1712857771
ContainerName=mariadb-demo
Network=wordpress-demo
Volume=mariadb:/var/lib/mysql:Z
Environment=MYSQL_USER=wp_user
Environment=MYSQL_DATABASE=wp_db
Secret=mysql-root-password-container,type=env,target=MYSQL_ROOT_PASSWORD
Secret=mysql-user-password-container,type=env,target=MYSQL_PASSWORD

[Install]
# Start by default on boot
WantedBy=multi-user.target default.target
